{
  "name": "music-player-electron",
  "version": "1.0.0",
  "description": "Music Player Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.musicplayer.app",
    "productName": "SVARA Music Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraFiles": [
      {
        "from": "../frontend/build",
        "to": "resources/frontend/build",
        "filter": ["**/*"]
      }
    ],
    "extraFiles": [
      {
        "from": "../frontend/build",
        "to": "resources/frontend/build",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/dist/api_server.exe",
        "to": "resources/backend/api_server.exe"
      }
    ],
    "win": {
      "target": "dir"
    }
  }
}