{
  "name": "music-player-electron",
  "version": "1.0.0",
  "description": "Music Player Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "author": "SVARA Music Player",
  "build": {
    "appId": "com.svara.musicplayer",
    "productName": "SVARA Music Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../frontend/build",
        "to": "frontend/build",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/dist/music_player_backend.exe",
        "to": "music_player_backend.exe"
      }
    ],
    "win": {
      "target": "dir"
    }
  }
}
